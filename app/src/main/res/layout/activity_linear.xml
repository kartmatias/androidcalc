<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/darkspace"
    android:orientation="vertical"
    tools:context=".LinearActivity"
    android:onClick="onClickCamera"
    android:id="@+id/linearLay"
    tools:visibility="visible">

    <TextView
        android:id="@+id/textViewTopo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/black"
        android:onClick="onClickShowNotification"
        android:text="@string/hello_world"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="25sp"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="@string/hello_world"
        android:onClick="onClickChangeAnim"
        android:scaleType="center"
        android:visibility="visible"
        android:layout_gravity="center"
        app:srcCompat="@drawable/earthanimationleft"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textViewTeam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:onClick="chamaTeamActivity"
        android:text="@string/by_equipe_c"
        android:textAlignment="viewEnd"
        android:textColor="@android:color/holo_blue_bright"
        tools:visibility="visible" />


</LinearLayout>